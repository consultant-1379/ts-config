      PREFIX-replicaCount: 2
      maxReplicas: 12
      PREFIX-minReplicas: 2
  eric-nrf-common:
    dbproxy:
      resources:
        limits:
          PREFIX-cpu: 3000m
        requests:
          PREFIX-cpu: 1400m
