        sharedVIPLabel: "ccrc-nssf-traffic"
        addressPoolName: "ccrc-nssf-sig"
    resources:
      istio-proxy:
        requests:
          PREFIX-cpu: 500m
          PREFIX-memory: 256Mi
        limits:
          PREFIX-cpu: 2000m
          PREFIX-memory: 1024Mi
    PREFIX-ports:
      - name: geode-locators
        port: 8091
        protocol: TCP
        targetPort: 8091
      - name: geode-gw-rcvrs
        port: 8092
        protocol: TCP
        targetPort: 8092
      - name: tls
        port: 443
        targetPort: 8443
        tcpkeepalive:
          interval: 10
